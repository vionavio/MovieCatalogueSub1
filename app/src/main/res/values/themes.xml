<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.MovieCatalogue" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/clear_purple</item>
        <item name="colorOnPrimary">@color/dark_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ViewLine">
        <item name="android:layout_marginStart">@dimen/_10dp</item>
        <item name="android:layout_marginTop">@dimen/_5dp</item>
        <item name="android:layout_marginEnd">@dimen/_10dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="TextViewDesc">
        <item name="android:layout_marginStart">@dimen/_8dp</item>
        <item name="android:layout_marginTop">@dimen/_4dp</item>
        <item name="android:layout_marginEnd">@dimen/_8dp</item>
    </style>

    <style name="TextViewTitle" >
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:layout_marginEnd">@dimen/_8dp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="ImageViewPoster" >
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:src">@color/teal_200</item>
        <item name="layout_constraintCircleRadius">@dimen/_4dp</item>
    </style>

    <style name="mainTitle" >
        <item name="android:layout_marginStart">@dimen/_20dp</item>
        <item name="android:layout_marginEnd">@dimen/_16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="maxLines">2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>